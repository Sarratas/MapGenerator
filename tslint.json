{
    "linterOptions": {
        "exclude": [
            "src/tests/*.ts",
            "*.js",
            "coverage/**/*"
        ]
    },
    "rules": {
        "cyclomatic-complexity": false,
        "increment-decrement": false,
        "newline-before-return": false,
        "no-parameter-properties": true,
        "no-parameter-reassignment": false,
        "no-unused-variable": false,
        "typedef": [ true, "call-signature", "arrow-call-signature", "parameter", "property-declaration" ],
        "unnecessary-else": true,
        "comment-format": {
            "options": [
                "check-space"
            ]
        },
        "member-access": true,
        "only-arrow-functions": false,
        "no-any": true,
        "no-magic-numbers": false,
        "no-non-null-assertion": false,
        "no-null-keyword": true,
        "no-require-imports": false,
        "no-unbound-method": true,
        "no-unnecessary-qualifier": true,
        "no-void-expression": {
            "options": [
                "ignore-arrow-function-shorthand"
            ]
        },
        "prefer-function-over-method": true,
        "prefer-const": true,
        "strict-comparisons": [
            true,
            {
                "allow-object-equal-comparison": true
            }
        ],
        "strict-type-predicates": true,
        "indent": [true, "spaces", 4],
        "triple-equals": {
            "options": [
                "allow-undefined-check"
            ]
        },
        "ban": {
            "options": [
                [
                    "describe",
                    "only"
                ],
                [
                    "it",
                    "only"
                ]
            ]
        },
        "interface-name": true,
        "max-classes-per-file": false,
        "member-ordering": {
            "options": {
                "order": "statics-first"
            }
        },
        "no-console": {
            "options": [
                "log"
            ]
        },
        "no-switch-case-fall-through": true,
        "strict-boolean-expressions": {
            "options": [
                "allow-boolean-or-undefined"
            ]
        },
        "switch-default": true,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-pascal-case",
                "require-const-for-all-caps"
            ]
        },
        "linebreak-style": [true, "LF"],
        "align": [true, "parameters", "statements"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "eofline": true,
        "import-spacing": true,
        "no-consecutive-blank-lines": true,
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": true,
        "number-literal-format": true,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "semicolon": [true, "always"],
        "trailing-comma": [true, {"multiline": "always", "singleline": "never", "esSpecCompliant": true}],
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator"
        ],
        "arrow-return-shorthand": true,
        "binary-expression-operand-order": true,
        "class-name": true,
        "encoding": true,
        "file-name-casing": [true, "camel-case"],
        "interface-over-type-literal": true,
        "match-default-export-name": true,
        "newline-per-chained-call": true,
        "no-angle-bracket-type-assertion": true,
        "no-boolean-literal-compare": true,
        "no-unnecessary-callback-wrapper": true,
        "no-unnecessary-initializer": true,
        "object-literal-key-quotes": [true, "consistent-as-needed"],
        "one-line": [true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "prefer-switch": true,
        "space-before-function-paren": [true, {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always",
            "method": "never",
            "constructor": "never"
        }],
        "space-within-parens": false,
        "switch-final-break": [true, "always"],
        "unnecessary-bind": true,
        "max-line-length": [true, 120]
    }
}